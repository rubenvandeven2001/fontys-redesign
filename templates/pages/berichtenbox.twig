<div class="box box--outer messagebox__box">
    <div class="messagebox__items">
        {% for index in 1..12 %}
            <a class="box messagebox__item {% if index == 2 %}messagebox__item--active{% endif %} {% if index == 1 or index == 6 %}messagebox__item--unread{% endif %}">
                <div class="messagebox__item-title-wrap">
                    <div class="messagebox__item-read-indication"></div>
                    <h3 class="h3 messagebox__item-title">Joris graauwman</h3>
                </div>
                <p class="messagebox__item-description">
                    zie bijlage, dit was mijn bel...
                </p>
            </a>
        {% endfor %}
    </div>

    <div class="messagebox__message">
